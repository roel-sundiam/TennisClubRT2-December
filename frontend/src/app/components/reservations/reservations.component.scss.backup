    font-size: 1rem;
    font-weight: 600;
    min-height: 56px; /* Touch-friendly */
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    
    &:hover {
      background: white;
      border-color: #cbd5e1;
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }
    
    &:active {
      transform: translateY(0);
    }
  }
